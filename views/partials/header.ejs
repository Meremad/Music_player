<script src="https://cdn.tailwindcss.com"></script>
<header class="bg-white shadow">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center py-4">
      <!-- Логотип/Название сайта -->
      <div class="text-2xl font-bold text-gray-800">
        Ye.
      </div>

      <!-- Навигация -->
      <nav>
        <ul class="flex space-x-6 items-center">
          <% if (locals.user) { %>

            <li>
              <a href="/posts/create" class="text-gray-600 hover:text-gray-900 font-medium transition duration-200 ease-in-out">Create post</a>
            </li>
            <li>
              <a href="/posts/catalog" class="text-gray-600 hover:text-gray-900 font-medium transition duration-200 ease-in-out">Catalog</a>
            </li>
            <!-- Player Link -->
            <li>
              <a href="/player" class="text-gray-600 hover:text-gray-900 font-medium transition duration-200 ease-in-out">Player</a>
            </li>
            <!-- API History Link -->
            <li>
              <a href="/api/history" class="text-gray-600 hover:text-gray-900 font-medium transition duration-200 ease-in-out">API History</a>
            </li>
            <% if (locals.user.isAdmin) { %>
              <!-- Admin Link (only for admin users) -->
              <li>
                <a href="/admin" class="text-gray-600 hover:text-gray-900 font-medium transition duration-200 ease-in-out">Admin</a>
              </li>
            <% } %>
            <!-- Новая кнопка для бонусного квиза -->
            <li>
              <a href="/quiz/bonus" class="text-gray-600 hover:text-gray-900 font-medium transition duration-200 ease-in-out">Bonus</a>
            </li>
            <!-- Logout Link -->
            <li>
              <a href="/logout" class="text-red-600 hover:text-red-700 font-medium transition duration-200 ease-in-out">Logout</a>
            </li>
          <% } else { %>
            <!-- Для неавторизованных пользователей -->
            <li>
              <a href="/login" class="text-gray-600 hover:text-gray-900 font-medium transition duration-200 ease-in-out">Login</a>
            </li>
            <li>
              <a href="/signup" class="text-gray-600 hover:text-gray-900 font-medium transition duration-200 ease-in-out">Sign Up</a>
            </li>
            <!-- Кнопка бонусного квиза для неавторизованных пользователей -->
            <li>
              <a href="/quiz/bonus" class="text-gray-600 hover:text-gray-900 font-medium transition duration-200 ease-in-out">Bonus</a>
            </li>
          <% } %>
        </ul>
      </nav>
    </div>
  </div>
  <div id="google_translate_element" class="absolute top-4 right-4 bg-gray-100 p-2 rounded shadow-md hidden"></div>
  <button id="translateToggle" class="absolute top-4 right-4 bg-blue-500 text-white px-2 py-1 rounded">Translate</button>
</header>
<script type="text/javascript">
  function googleTranslateElementInit() {
    new google.translate.TranslateElement({
      pageLanguage: 'en',
      layout: google.translate.TranslateElement.InlineLayout.SIMPLE,
      autoDisplay: false
    }, 'google_translate_element');
  }

  document.getElementById('translateToggle').addEventListener('click', function() {
    const translateElement = document.getElementById('google_translate_element');
    if (translateElement.classList.contains('hidden')) {
      translateElement.classList.remove('hidden');
      this.textContent = 'Hide Translate';
    } else {
      translateElement.classList.add('hidden');
      this.textContent = 'Translate';
    }
  });
</script>
<script src="https://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>