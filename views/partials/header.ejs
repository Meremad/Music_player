<script src="https://cdn.tailwindcss.com"></script>
<ul class="flex space-x-6 items-center">
  <% if (locals.user) { %>
    <!-- Player Link -->
    <li>
      <a href="/player" class="text-gray-600 hover:text-gray-900 font-medium transition duration-200 ease-in-out">Player</a>
    </li>

    <!-- API History Link -->
    <li>
      <a href="/api/history" class="text-gray-600 hover:text-gray-900 font-medium transition duration-200 ease-in-out">API History</a>
    </li>

    <% if (locals.user.isAdmin) { %>
      <!-- Admin Link (only for admin users) -->
      <li>
        <a href="/admin" class="text-gray-600 hover:text-gray-900 font-medium transition duration-200 ease-in-out">Admin</a>
      </li>
    <% } %>

    <!-- Logout Link -->
    <li>
      <a href="/logout" class="text-red-600 hover:text-red-700 font-medium transition duration-200 ease-in-out">Logout</a>
    </li>
  <% } else { %>
    <!-- If no user is logged in, you can add links for login/signup here -->
    <li>
      <a href="/login" class="text-gray-600 hover:text-gray-900 font-medium transition duration-200 ease-in-out">Login</a>
    </li>
    <li>
      <a href="/signup" class="text-gray-600 hover:text-gray-900 font-medium transition duration-200 ease-in-out">Sign Up</a>
    </li>
  <% } %>
</ul>
